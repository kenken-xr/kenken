<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFCC"
    tools:context=".measureView">

    <Button
        android:id="@+id/measure_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/shape_rec"
        android:text="开始测距"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/measure_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/measure_message"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="118dp"
        android:background="@drawable/shape_circle_trans"
        android:text="@string/weq"
        android:textColor="#FFCC33"
        app:layout_constraintBaseline_toBaselineOf="@+id/measure_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/measure_start" />

</androidx.constraintlayout.widget.ConstraintLayout>